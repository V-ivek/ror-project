<%= stylesheet_link_tag "posts" %>
<body>
<header>
<%= render "header" %>
</header>
<section>
<div class="container">
<h2>Welcome to posts controller</h2>
<h1>Listing Posts</h1>
</div>
<table>
  <tr>
    <th>Owner</th>
    <th>Content</th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.owner %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table> 
<%= link_to 'New post', new_post_path %>
<%= link_to 'Back', controller: 'welcome' %>
</section>
<footer>
</footer>
</body>