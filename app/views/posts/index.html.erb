<%= stylesheet_link_tag "posts" %>

  <body>

    <section>
      <div class="container-fluid">
        <h2>Top blogs</h2>
      </div>
      <div class="blogs">
        <% @posts.each do |post,index| %>
          <div class="container justify-items-center align-items-center">
            <div class="blog-header">
              <%= post.user.email %>
            </div>
            <div class="blog-content">
              <p>
                <%= link_to post.title , post_path(post) %>
              </p>
              <p>
                <%= post.content %>
              </p>
              <span><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></span>
              <span><%= button_to 'Edit', edit_post_path(post.id) , {method: :get } %></span>
            </div>
            <div class="blog-footer">
              <div class="like-wrapper">
                <%= link_to "Likes (#{post.likes_count})", add_like_path(post.id) %><span class="glyphicon glyphicon-thumbs-up"></span>
              </div>
              <div class="comment-wrapper">
                <a href="#">Comments(<%= post.comments_count %>)
                  <span class="glyphicon glyphicon-comment"></span>
                </a>
              </div>
            </div>
          </div>
          <% end %>
      </div>

    </section>
    <footer>
      <%= render "footer" %>
    </footer>
  </body>