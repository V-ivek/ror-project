
<%= form_with model: @post, local: true do |form| %>
  <p>
    <%= form.label :Owner %><br>
    <%= form.text_field :owner %>
  </p>
  <p>
    <%= form.label :Title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :Post %><br>
    <%= form.text_area :content %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
  <p class="link">
    <%= link_to 'Back', posts_path %>  
  </p>

<% end %>